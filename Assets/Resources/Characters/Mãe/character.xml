<?xml version="1.0" encoding="utf-8"?>
<Behaviour xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <characterName>Mãe</characterName>
  <interacatle>true</interacatle>
  <quest>1</quest>
  <subQuest>0</subQuest>
  <total>0</total>
  <dismissible>true</dismissible>

  <dialogs>

  	<dialog> <!-- Dialogo antes da quest -->
     <speech player="true" expression="0">
        <text>Mãe, posso brincar lá fora?</text>
      </speech>

      <speech player="false" expression="0">
        <text>Agora, não. Você ainda precisa terminar a sua pesquisa para o trabalho da escola. Mãos à obra!</text>
      </speech>
    </dialog>

    <dialog><!-- Dialogo na quest mas sem requisito-->
      <speech player="true" expression="0">
        <text></text>
      </speech>
    </dialog>

	  <dialog><!-- Dialogo na quest correto-->

	   <speech player="true" expression="0">
        <text>E agora mãe, posso sair para brincar?</text>
      </speech>

	    <speech player="false"  expression="0">
	    	<text>Ainda não, filho. Hoje é o seu dia de lavar a louça, esqueceu?</text>
	    </speech>

	    <speech player="true" expression="1">
        <text>Poxa, eu só queria brincar.</text>
      </speech>

      <questLog>
        <item>Escovar os dentes</item>
        <item>Tomar banho</item>
        <item>Lavar a louça</item>
      </questLog>

	  </dialog>

	  <dialog><!-- Dialogo depois quest-->
      <speech player="false" expression="0">
        <text>Pronto Leo, pode ir agora.</text>
      </speech>

      <speech player="true" expression="0">
        <text>Valeu, mãe!</text>
      </speech>
    </dialog>

    <dialog><!-- Dialogo depois quest-->
      <speech player="false" expression="0">
        <text>E então Leo, já lavou a louça, escovou os dentes e tomou banho?</text>
      </speech>
    </dialog>

    <dialog><!-- Dialogo depois quest-->
      <speech player="false" expression="0">
        <text>Leo, saia daqui estou limpando a cozinha.</text>
      </speech>
    </dialog>
      
  </dialogs>

</Behaviour>
  